<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightgray"
    tools:context="com.example.ucer.treatatreata.PerSongActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/toolbar">

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical">


        <ImageView

            android:id="@+id/persongsss_id"
            android:clickable="true"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="150dp"
            android:layout_gravity="center"
            android:focusable="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical">


        <ImageView

            android:id="@+id/persongddd_id"
            android:clickable="true"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="150dp"
            android:layout_gravity="center"
            android:focusable="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView

            android:id="@+id/back_id"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="820dp"
            android:layout_gravity="center"
            android:src="@drawable/back"
            android:focusable="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">


        <ImageView

            android:id="@+id/per0_id"
            android:clickable="true"
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/selectsong"
            android:focusable="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="260dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical">


        <ImageView

            android:id="@+id/per1_id"
            android:clickable="true"
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/appstar"
            android:focusable="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="360dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical">


        <ImageView

            android:id="@+id/per2_id"
            android:clickable="true"
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/appturkey"
            android:focusable="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="460dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical">


        <ImageView

            android:id="@+id/per3_id"
            android:clickable="true"
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/appbee"
            android:focusable="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="560dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical">


        <ImageView

            android:id="@+id/per4_id"
            android:clickable="true"
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/appbridge"
            android:focusable="true" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="1000dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/colorbar" />

</RelativeLayout>
